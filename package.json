{
  "name": "chatgpt-fake",
  "version": "1.0.0",
  "description": "ChatGPT Fake - Full Stack Application",
  "private": true,
  "scripts": {
    "postinstall": "cd backend && npm install && cd ../front && npm install",
    "install:all": "npm install && cd backend && npm install && cd ../front && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:front\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:front": "cd front && npm run dev",
    "build": "npm run build:backend && npm run build:front",
    "build:backend": "cd backend && npm run build",
    "build:front": "cd front && npm run build",
    "build:parallel": "concurrently \"npm run build:backend\" \"npm run build:front\"",
    "start": "cd backend && npm run start",
    "start:backend": "cd backend && npm run start",
    "start:front": "cd front && npm run preview",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:front\"",
    "clean": "npm run clean:backend && npm run clean:front",
    "clean:backend": "cd backend && rimraf dist",
    "clean:front": "cd front && rimraf dist"
  },
  "keywords": [
    "chatgpt",
    "fake",
    "full-stack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
